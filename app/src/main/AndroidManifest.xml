<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pradeesh.knowcovid">

    <!-- Essential Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Android Car Api Permissions -->
    <uses-permission android:name="android.car.permission.CAR_SPEED" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/DarkTheme">
        <activity android:name="com.pradeesh.knowcovid.ui.RSSDetailedWebActivity"></activity>
        <activity android:name="com.pradeesh.knowcovid.ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pradeesh.knowcovid.MainActivity"
            android:label="@string/app_name"></activity>
    </application>

</manifest>